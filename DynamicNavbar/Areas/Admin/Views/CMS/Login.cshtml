
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="~/Areas/Admin/Content/CSS/main-columns.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/CSS/main-cms.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    @if (TempData["SYS_MSG"] != null)
    {
        <div id="sys-msg">
            @TempData["SYS_MSG"]
        </div>
    }
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <form action="/Admin/CMS/LoginSubmit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div id="loginForm">
                    <div class="row">
                        <div class="col-12">
                            <h1>Login til CMS</h1>
                        </div>
                        <div class="col-4"><i class="material-icons">email</i></div><div class="col-8">
                            <input type="email" name="email" placeholder="Email..." required />
                        </div>
                        <div class="col-4"><i class="material-icons">vpn_key</i></div><div class="col-8">
                            <input type="password" name="password" placeholder="Password..." required />
                        </div>
                        <div class="col-4"><i class="material-icons">keyboard_return</i></div><div class="col-8">
                            <input type="submit" value="Login" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</body>
</html>
