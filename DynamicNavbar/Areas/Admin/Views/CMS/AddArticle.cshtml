
@{
    ViewBag.Title = "Add Article";
}

<script src="~/Areas/Admin/Plugins/ckeditor/ckeditor.js"></script>
<form action="/Admin/CMS/AddArticleSubmit" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <label for="Title">Title</label>
        </div>
        <div class="col-12">
            <input type="text" required placeholder="Title" name="Title" />
        </div>
        <div class="col-12">
            <label for="Description">Description</label>
        </div>
        <div class="col-12">
            <textarea name="Description" id="Description" required></textarea>
        </div>
        <div class="col-12">
            <label for="ImageFile">Image</label>
        </div>
        <div class="col-12">
            <input type="file" name="ImageFile" required />
        </div>
        <div class="col-12">
            <input type="submit" value="Add Activity" />
        </div>
    </div>
</form>
<script>
    CKEDITOR.replace('Description', { height: 360, autoGrow_onStartup: true });
</script>